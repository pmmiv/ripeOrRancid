<div class="row artRow">
	<div class="col-2">
		<button class="btn btn-outline-success ripeBtn" data-id="{{_id}}">Make Ripe!</button>
	</div>

	<div class="col-8">
		<a href="{{link}}"><span class="artTitle">{{title}}</span></a>
	</div>

	<div class="col-2">
		<button class="btn btn-outline-success commentsBtn" data-id="{{_id}}">Comments</button>
	</div>

	<div class="col-12 commentsDiv" id="{{_id}}">
		<div class="row">
			<div class="col-12">
				<input type="text" name="title" class="form-control titleInput" placeholder="Title"><br>
				<textarea type="text" name="body" class="form-control noteInput" placeholder="How did it make you cry?"></textarea><br>
				<button class="btn btn-success commentSubmit" data-id="{{_id}}">Post</button>
				<button class="btn btn-danger commentDelete" data-id="{{_id}}">Toss</button>
			</div>
		</div>
	</div>
</div>
